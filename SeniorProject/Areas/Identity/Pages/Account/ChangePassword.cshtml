@page
@model SeniorProject.Areas.Identity.Pages.Account.ChangePasswordModel
@{

    ViewData["Title"] = "Change Password";
}
<div id=container>
    <div class="row w-100 g-0">
        <div class="col-sm-6">
            <div class="container-tab">
        <h3>Change Password</h3>
         <hr />
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-floating mb-3">
                        <input asp-for="forgetPassword.Password" class="form-control" autocomplete="password" aria-required="true"/>
                <label class="form-label" >New Password</label>
                <span asp-validation-for="forgetPassword.Password"></span>
            </div>
            <div class="form-floating mb-3">
                        <input asp-for="forgetPassword.ConfirmPassword" class="form-control" autocomplete="password" aria-required="true" />
                <label asp-for="forgetPassword.ConfirmPassword" class="form-label" ></label>
                <span asp-validation-for="forgetPassword.ConfirmPassword"></span>
            </div>
              <input type="hidden" asp-for="forgetPassword.Email" class="form-control" />
            <input type="hidden" asp-for="forgetPassword.Token" class="form-control" />
            <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
    </div>
        </div>
    </div>
    
</div>



