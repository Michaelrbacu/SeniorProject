@using Microsoft.AspNetCore.Identity
@using AuthSystem.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<head>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Include jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<ul class="navbar-nav">
    <li class="nav-item">
        <a style="background-color: #333; color: #fff; padding: 14px 16px; text-decoration: none;" class="nav-link @(ViewBag.Active == "HomeIndex" ? " active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </li>
    <li class="nav-item">
        <a style="background-color: #333; color: #fff; padding: 14px 16px; text-decoration: none;" class="nav-link @(ViewBag.Active == "HomeContactUs" ? " active" : "")" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
    </li>
    <li class="nav-item dropdown">
        <a style="background-color: #333; color: #fff; padding: 14px 16px; text-decoration: none;" class="nav-link dropdown-toggle @(ViewBag.Active == "GetInvolved" ? " active" : "")" id="getInvolvedDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Get Involved
        </a>
        <div class="dropdown-menu" aria-labelledby="getInvolvedDropdown">
            <a class="dropdown-item @(ViewBag.Active == "EventsList" ? " active" : "")" asp-area="" asp-controller="Home" asp-action="EventsList">Events</a>
            <a class="dropdown-item @(ViewBag.Active == "HomeDonate" ? " active" : "")" asp-area="" asp-controller="Donation" asp-action="Create">Donate</a>
            <a class="dropdown-item @(ViewBag.Active == "HomeDonated" ? " active" : "")" asp-area="" asp-controller="Donation" asp-action="Donated">Donated</a>
        </div>
    </li>
</ul>

    

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
    
}
</ul>

<body>
    @if (UserManager.GetUserName(User) == "admin@cpt275.beausanders.org")
    {
    //admin@cpt275.beausanders.org
        //teamProjeck275!

        <p>ADMIN VIEW</p>

        <li class="nav-item dropdown">
            <a style="background-color: #333; color: #fff; padding: 14px 16px; text-decoration: none;" class="nav-link dropdown-toggle @(ViewBag.Active == "AdminDropdown" ? " active" : "")" id="adminDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Admin
            </a>
            <div class="dropdown-menu" aria-labelledby="adminDropdown">
                <a class="dropdown-item @(ViewBag.Active == "AddEvents" ? " active" : "")" asp-area="" asp-controller="Home" asp-action="AddEvents">Add Events</a>
                <a class="dropdown-item @(ViewBag.Active == "AdminList" ? " active" : "")" asp-area="" asp-controller="Home" asp-action="AdminList">Admins</a>
                <a class="dropdown-item @(ViewBag.Active == "CreateAdmin" ? " active" : "")" asp-area="" asp-controller="Home" asp-action="CreateAdmin">Create Admin</a>
            </div>
        </li>
    }
</body>
<script>
    // Initialize dropdown functionality
    $(document).ready(function () {
        $('.dropdown-toggle').dropdown();
    });
</script>